<%- include("../../partials/header.ejs", {active: "login-page-active"}) %>

<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            
            <%if (passDataToEjs.userCreateSuccess) { %>
                <p><%= "We send an verification mail to your email" %></p>
            <% } %>
            
            <div class="card card-body">
                <h4 class="mb-3">Forget password?</h4>
                <form action="" method="post">
                    <div class="form-group">
                        <input type="text" style="display: none;" name="email_page"  value="ok"/>
                        <label for="email">Enter your username or email address</label>
                        <input type="text" name="email_or_username" id="email" class="form-control <%= passDataToEjs.errorForFront && 'is-invalid' %>" placeholder="Enter your username or email address" />
                    </div>
                    <input type="submit" class="btn btn-primary" value="Send code" />
                </form>
                <%- passDataToEjs.errorForFront %>
            </div>
        </div>
    </div>
</div>



<%- include("../../partials/footer.ejs") %>

</body>
