<%- include("../../partials/header.ejs", {active: "login-page-active"}) %>

<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            
            <%if (passDataToEjs.userCreateSuccess) { %>
                <p><%= "We send an verification mail to your email" %></p>
            <% } %>
            
            <div class="card card-body">
                <h4 class="mb-3">Password reset</h4>
                <form action="" method="post">
                    <input type="text" style="display: none;" name="new_pass_page"  value="ok"/>
                    <div class="form-group">
                        <label for="new_pass">New password</label>
                        <input type="password" name="new_pass" id="new_pass" class="form-control <%= passDataToEjs.errorForFront && 'is-invalid' %>" placeholder="Enter new password" />
                    </div>
                    <div class="form-group">
                        <label for="confirm_pass">Confirm password</label>
                        <input type="password" name="confirm_pass" id="confirm_pass" class="form-control <%= passDataToEjs.errorForFront && 'is-invalid' %>" placeholder="Re-write new Password" />
                    </div>
                    <input type="submit" class="btn btn-primary" value="Update password" />
                </form>
                <%- passDataToEjs.errorForFront %>
            </div>
        </div>
    </div>
</div>



<%- include("../../partials/footer.ejs") %>

</body>
